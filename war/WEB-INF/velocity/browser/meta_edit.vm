##
## Templates for rp edit 
##

<div id="metaEditDialog" data-dojo-type="iam/Dialog" title="Edit metadata for ${relyingPartyId}"
     data-dojo-props="submitLabel:'Save changes', submitAction:'saveRP(\'${relyingParty.entityId}\')', cancelLabel:'Cancel'"
     style="display:none">

<table class="iamtable" role="presentation">

#if ( $metadataByLookup )
  <tr><td colspan="99">This metadata was generated by the Service Provider's Metadata response.</td></tr>
#end
#if ( $metadataByDefault )
  <tr><td colspan="99" class="warn">Your Service Provider did not respond to a request for metadata. 
These are default values for a Shibboleth 2.x Service Provider.  They will very likely need to be edited.</td></tr>
#end

    <tr><th colspan="3">General information</th></tr>

## Organization
   #set ( $count = 0 )

   #set ( $org = $relyingParty.organization )

     <tr id="org0_0">
      <td class="label">Name:</td><td><input data-dojo-type="dijit.form.TextBox" id="orgn_0" value="$!org.name" /></td>
     </tr>
     <tr id="org0_1">
      <td class="label">Display:</td><td><input data-dojo-type="dijit.form.TextBox" id="orgd_0" value="$!org.displayName" /></td>
     </tr>
     <tr id="org0_2">
      <td class="label">Url:</td><td><input data-dojo-type="dijit.form.TextBox" id="orgu_0" value="$!org.url" /></td>
     </tr>
     #set ( $count = $count + 1)

 
 ## Contacts
      <tr><td class="label">Contacts</td>
       <td><table>
   #set ( $count = 0 )
   #foreach ( $ct in $relyingParty.contactPersons )
     <tr id="ct${count}_0">
      <td class="label"  >Type:</td><td>
       <select id="ctt_${count}">
       #foreach ( $t in ["","technical","support","administrative","billing","other"] )
         <option value="$t" 
           #if ( $t == $ct.type )
             selected="selected"
           #end
         >$t</option>
       #end
       </select>
     </td>
     </tr>
     <tr id="ct${count}_1">
      <td class="label"  >Name:</td><td><input data-dojo-type="dijit.form.TextBox" id="ctgn_${count}" value="$!ct.givenName" /></td>
     </tr>
     <tr id="ct${count}_2">
      <td class="label"  >Email:</td><td><input data-dojo-type="dijit.form.TextBox" id="cte_${count}" value="$!ct.email" /></td>
     </tr>
     <tr id="ct${count}_3">
      <td class="label"  >Phone:</td><td><input data-dojo-type="dijit.form.TextBox" id="ctp_${count}" value="$!ct.phone" /></td>
     </tr>
     <tr><td/><td colspan="99" height="5"></td></tr>
     #set ( $count = $count + 1)
   #end
 
   #foreach ( $i in [ $count .. 4 ] )
     <tr id="ct${i}_0" #if ( $i > 1 ) ${hide} #end >
      <td class="label"  >Type:</td><td>
       <select id="ctt_${i}">
       #foreach ( $t in ["","technical","support","administrative","billing","other"] )
         <option value="$t" 
           #if ( $t == "" )
             selected="selected"
           #end
         >$t</option>
       #end
       </select>
     </td>
     </tr>
     <tr id="ct${i}_1" #if ( $i > 1 ) ${hide} #end >
      <td class="label"  >Name:</td><td><input data-dojo-type="dijit.form.TextBox" id="ctgn_${i}" value="" /></td>
     </tr>
     <tr id="ct${i}_2" #if ( $i > 1 ) ${hide} #end >
      <td class="label"  >Email:</td><td><input data-dojo-type="dijit.form.TextBox" id="cte_${i}" value="" /></td>
     </tr>
     <tr id="ct${i}_3" #if ( $i > 1 ) ${hide} #end >
      <td class="label"  >Phone:</td><td><input data-dojo-type="dijit.form.TextBox" id="ctp_${i}" value="" /></td>
     </tr>
     #set ( $label = "" )
   #end
   <tr id="ct_more"><td class="cleanlink" colspan="3"><a href="javascript:meta_showMoreFields('ct', 'ct_more')">add contact person</a></td></tr>

   </table></td></tr>

## Details

     <tr><th colspan="3">Metadata details</th><th>

 ## ProtocolSupportEnumerations

      <tr><td class="label">Protocols</td>
      </tr>
   #set ( $count = 0 )
   #foreach ( $ps in $relyingParty.protocolSupportEnumerations )
     <tr id="pse${count}_0">
      <td class="label"</td><td><input data-dojo-type="dijit.form.TextBox" name="pse_data" id="pse_${count}" value="$ps" /></td>
     </tr>
     #set ( $count = $count + 1)
   #end

   #foreach ( $i in [ $count .. 4 ] )
     <tr id="pse${i}_0" ${hide}>
      <td class="label"></td><td><input data-dojo-type="dijit.form.TextBox" name="pse" id="pse_${i}" value="" /></td>
     </tr>
   #end
   <tr id="pse_more"><td/><td class="cleanlink"><a href="javascript:meta_showMoreFields('pse', 'pse_more')">+</a></td></tr>
 
   ## KeyInfo

      <tr><td class="label">KeyInfo</td>
      </tr>
   #set ( $count = 0 )
   #foreach ( $key in $relyingParty.keyDescriptors )
      <tr id="ki${count}_0">
      <td class="label" >Name:</td>
        <td><input data-dojo-type="dijit.form.TextBox" name="keyName_${count}" id="kn_${count}" value="$!key.keyName" /></td>
      </tr>

      <tr id="ki${count}_1">
      <td class="label"  valign="top">Cert:</td>
         <td class="certbox"><textarea cols="64" rows="5" name="keyCert_${count}" id="kc_${count}" style="font-size:8px">$!key.certificate</textarea></td>
      </tr>
     #set ( $count = $count + 1)
   #end

   #foreach ( $i in [ $count .. 3 ] )
   
      <tr id="ki${i}_0" ${hide}>
      <td class="label" >Name:</td>
        <td><input data-dojo-type="dijit.form.TextBox" name="keyName_${i}" id="kn_${i}" value="" /></td>
      </tr>
      <tr id="ki${i}_1" ${hide}>
      <td class="label"  valign="top">Cert:</td>
         <td class="certbox"><textarea cols="64" rows="10" name="keyCert_${i}" id="kc_${i}"></textarea></td>
      </tr>

   #end
     <tr id="ki_more"><td/><td class="cleanlink"><a href="javascript:meta_showMoreFields('ki', 'ki_more')">+</a></td></tr>

 
   ## Nameid

      <tr><td class="label">NameID</td>
      </tr>
   #set ( $count = 0 )
   #foreach ( $name in $relyingParty.nameIDFormats )
     <tr id="ni${count}_0">
      <td class="label"><td><input data-dojo-type="dijit.form.TextBox" name="nameId_${count}" id="ni_${count}" value="$name" /></td>
     </tr>
     #set ( $count = $count + 1)
   #end

   #foreach ( $i in [ $count .. 4 ] )
     <tr id="ni${i}_0" ${hide}>
      <td class="label"><td><input data-dojo-type="dijit.form.TextBox" name="nameId_${xtra}" id="ni_${i}" value="" /></td>
     </tr>
   #end
     <tr id="ni_more"><td/><td class="cleanlink"><a href="javascript:meta_showMoreFields('ni', 'ni_more')">+</a></td></tr>
 
   ## ACS
      <tr><td class="label" colspan="99">ACS</td>
      </tr>
   #set ( $count = 0 )
   #foreach ( $acs in $relyingParty.assertionConsumerServices )
     <tr id="acs${count}_0">
      <td class="label" align="right" ><input data-dojo-type="dijit.form.TextBox" size="2" id="acsi_${count}" value="$acs.index"/></td>
             <td nowrap="nowrap"><input data-dojo-type="dijit.form.TextBox" id="acsb_${count}" value="$acs.binding" /></td>
     </tr>
     <tr id="acs${count}_1">
      <td class="label"  ></td>
             <td nowrap="nowrap"><input data-dojo-type="dijit.form.TextBox" id="acsl_${count}" value="$acs.location" /></td>
     </tr>
     <tr><td></td><td colspan="99" height="3"></td></tr>
     #set ( $count = $count + 1)
   #end

   #foreach ( $i in [ $count .. 49 ] )
     <tr id="acs${i}_0" ${hide}>
      <td class="label" align="right" ><input data-dojo-type="dijit.form.TextBox" size="2" id="acsi_${i}" value=""/></td>
             <td nowrap="nowrap"><input data-dojo-type="dijit.form.TextBox" id="acsb_${i}" value="" /></td>
     </tr>
     <tr id="acs${i}_1" ${hide}><td></td>
             <td nowrap="nowrap"><input data-dojo-type="dijit.form.TextBox" id="acsl_${i}" value="" /></td>
     </tr>
   #end
     <tr id="acs_more"><td/><td class="cleanlink"><a href="javascript:meta_showMoreFields('acs', 'acs_more')">+</a></td></tr>

</table></td></tr>

#*

   <tr><td/><td colspan="99"><hr></td></tr>

<tr>
   <td></td>
   <td colspan="1" align="left">
    <button id="metaEditButton" dojoType="dijit.form.Button" type="button" class="subButton" onClick="saveRP('${relyingParty.entityId}')">
      Save changes
    </button>
    <button id="metaEditCancel" dojoType="dijit.form.Button" type="button" class="subButton" onClick="iam_hideTheDialog('metaEditDialog')">
      Cancel
    </button>
   </td>
</tr>

</table>
 *#
</div>

